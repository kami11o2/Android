<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView16"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#020000"
        android:layout_marginTop="15sp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/time"
        android:textColor="#eee1e1"
        android:gravity="left|center"
        android:layout_alignTop="@+id/textView23"
        android:layout_alignEnd="@+id/date"
        android:layout_alignBottom="@+id/textView23"
        android:layout_toEndOf="@+id/textView27" />

    <Button
        android:id="@+id/pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Thanh Toán" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/textView16"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="33dp"
        android:layout_toStartOf="@+id/textView18"
        android:text="Rạp"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/noofseats"
        android:textColor="#eee1e1"
        android:text="Number"
        android:layout_alignBaseline="@+id/theascr"
        android:layout_alignBottom="@+id/theascr"
        android:layout_alignStart="@+id/textView18"
        android:gravity="right|center"
        android:paddingRight="20dp"
        android:layout_marginRight="35dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView17"
        android:layout_alignBottom="@+id/textView17"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:gravity="right|center"
        android:paddingRight="20dp"
        android:text="Ghế"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/theascr"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="20dp"
        android:layout_toStartOf="@+id/noofseats"
        android:paddingRight="5dp"
        android:text="Giá tiền:"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/price"
        android:textColor="#eee1e1"
        android:gravity="left"
        android:layout_above="@+id/textView19"
        android:layout_toEndOf="@+id/textView27"
        android:layout_alignTop="@+id/textView21"
         />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignStart="@+id/textView21"
        android:layout_marginTop="14dp"
        android:layout_toStartOf="@+id/time"
        android:text="Ngày:"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/date"
        android:textColor="#eee1e1"
        android:layout_alignTop="@+id/textView19"
        android:gravity="left"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/textView19"
        android:layout_toEndOf="@+id/textView27"/>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="12dp"
        android:text="Giờ:"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email :"

        android:id="@+id/textView27"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_below="@+id/time"
        android:layout_alignStart="@+id/textView23"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/emailid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:textColor="#eee1e1"
        android:id="@+id/emailid"
        android:layout_alignTop="@+id/textView27"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:textColor="#eee1e1"
        android:id="@+id/phone"
        android:maxLength="10"
        android:layout_below="@+id/emailid"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailid"
        android:layout_alignStart="@+id/textView27"

        android:layout_alignBottom="@+id/phone"
        android:layout_toStartOf="@+id/phone"
        android:text="SĐT:"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theascr"
        android:textColor="#eee1e1"
        android:text="Theatre"
        android:layout_below="@+id/textView17"
        android:layout_alignEnd="@+id/textView16"
        android:layout_alignStart="@+id/textView17" />

</RelativeLayout>
