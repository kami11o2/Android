<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/colorPrimaryDark">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/spiderman"
        android:id="@+id/imageView40"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView40"
        android:layout_alignParentStart="true"

        android:layout_marginLeft="15dp"
        android:layout_toStartOf="@+id/imageButton30"
        android:text="2014 ‧  Hành Động / Viễn tưởng  ‧ 2 giờ 23 phút"
        android:textColor="?android:attr/colorPressedHighlight" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="396dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView41"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="0dp"
        android:gravity="fill"
        android:text="Phần hai của Người Nhện là bom tấn dành riêng cho kỳ nghỉ lễ 30/4 và 1/5. Nối tiếp nội dung phần trước, Người Nhện phải cân bằng giữa trách nhiệm to lớn của siêu anh hùng bảo vệ New York và cuộc sống bình thường của một học sinh trung học. Sở hữu thân phận kép thú vị, với Peter Parker, không gì sánh bằng việc đu mình qua những toàn nhà chọc trời, được người dân ca ngợi, tin tưởng và dành thời gian bên bạn gái xinh đẹp: Gwen Stacy.  Với sự giúp đỡ của người bạn thân Harry Osborn, những bí ẩn về mối liên hệ giữa cha của Peter và tập đoàn Oscorp dần được hé lộ. Oscorp chính là nơi đã mang lại cho Peter sức mạnh siêu nhiên nhưng cũng khiến anh phải đối mặt với những thế lực vô cùng nguy hiểm: Electro, Rhino và Green Goblin. Đứng trước trận chiến lớn nhất từ trước tới nay, Peter nhận ra bài học sâu sắc khi trở thành một siêu anh hùng… "
        android:textColor="?android:attr/colorPressedHighlight" />

    <ImageButton
        app:srcCompat="?attr/actionModeShareDrawable"
        android:id="@+id/imageButton40"
        android:background="?android:attr/colorPressedHighlight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/textView42"
        android:layout_toEndOf="@+id/imageView40"
        android:layout_marginBottom="11dp" />

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView40"
        android:layout_alignStart="@+id/textView41"
        android:gravity="bottom|left|center_vertical"
        android:text="The Amazing Spider-Man 2-\n Người nhện siêu Đẳng 2"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="18sp" />

</RelativeLayout>
