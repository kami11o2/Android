<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@color/colorPrimaryDark"
    android:clickable="true">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mi5"
        android:id="@+id/imageView20"
        android:layout_marginTop="28dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/textView20"
        android:layout_alignEnd="@+id/textView20"

        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:text="2015 ‧ Hành động/ Giật gân ‧ 2 giờ 11 phút"
        android:textColor="?android:attr/colorPressedHighlight" />

    <ImageButton
        app:srcCompat="?attr/actionModeShareDrawable"
        android:id="@+id/imageButton20"
        android:background="?android:attr/colorPressedHighlight"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="11dp"
        android:layout_alignBottom="@+id/textView21"
        android:layout_toEndOf="@+id/textView20"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="394dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView21"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="2dp"
        android:gravity="fill"
        android:text="Mission Impossible 5: Rogue Nation - Nhiệm vụ bất khả thi 5: Quốc gia dối trá: là phần thứ 5 trong loạt phim hành động bom tấn về điệp viên nổi tiếng. Tài tử điển trai Tom Cruise quay lại với nhân vật biểu tượng Ethan Hunt, lần này sẽ phải thực hiện một nhiệm vụ siêu khó khăn: tiêu diệt cả một tổ chức lừa đảo xuyên quốc gia Syndicate – nơi tập hợp những sát thủ thông minh và nguy hiểm nhất. Mission Impossible 5 sẽ do đạo diễn Christopher McQuarrie, người từng hợp tác với Cruise trong Jack Reakcer, chỉ đạo. "
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView20"
        android:layout_alignEnd="@+id/imageView20"
        android:layout_marginLeft="15dp"
        android:gravity="bottom|left|center_vertical"
        android:text="Mission: Impossible - Quốc gia bí ẩn"
        android:textColor="?android:attr/colorPressedHighlight"
        android:textSize="17sp" />

</RelativeLayout>


